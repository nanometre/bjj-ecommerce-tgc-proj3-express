{{#extends 'base'}}

{{#block 'content'}}
<div class="container-fluid">
    <div class="container content-container">
        <div class="h-100 p-3 d-flex flex-column justify-content-center">
            {{> flash}}
            <div class="w-100 p-3 shadow-lg rounded-3 border border-dark align-self-center"
                style="background-color: white; max-width: 500px">
                <h3>Updating user details for "{{user.email}}"</h3>
                <form method="POST" class="mx-auto" style="max-width: 350px; min-width: 300px">
                    {{> csrfToken}}
                    <div class='w-75 mx-auto'>
                        {{{userForm}}}
                        <div class="custom-btn-group">
                            <a href='/users' class="btn btn-sm btn-dark btn-outline-light my-3">Cancel</a>
                            <input type="submit" value="Update User" class="btn btn-sm btn-dark btn-outline-light my-3">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/block}}

{{/extends}}