{{#extends 'base'}}

{{#block 'content' }}
<h1>Users</h1>
<h5 class="mt-5">Employees</h5>
<div class="w-100 overflow-auto p-3 shadow-lg rounded-3">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">User Type</th>
                <th scope="col"></th>
            </tr>
        </thead>
        {{#each employees}}
        <tbody>
            <tr>
                <td scope="row">{{this.first_name}}</td>
                <td scope="row">{{this.last_name}}</td>
                <td scope="row">{{this.email}}</td>
                <td scope="row">{{this.userType.user_type}}</td>
                <td scope="row">
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-success" href="/users/{{this.user_id}}/update">Update</a>
                        <a class="btn btn-danger" href="/users/{{this.user_id}}/delete">Delete</a>
                    </div>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
<h5 class="mt-5">Customers</h5>
<div class="w-100 overflow-auto p-3 shadow-lg rounded-3">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">User Type</th>
                <th scope="col"></th>
            </tr>
        </thead>
        {{#each customers}}
        <tbody>
            <tr>
                <td scope="row">{{this.first_name}}</td>
                <td scope="row">{{this.last_name}}</td>
                <td scope="row">{{this.email}}</td>
                <td scope="row">{{this.userType.user_type}}</td>
                <td scope="row">
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-success" href="/users/{{this.user_id}}/update">Update</a>
                        <a class="btn btn-danger" href="/users/{{this.user_id}}/delete">Delete</a>
                    </div>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
{{/block}}

{{/extends}}