{{#extends 'base'}}

{{#block 'content' }}
<div class="container-fluid">
    <div class="container content-container">
        <div class="h-100 p-3 d-flex flex-column justify-content-center">
            {{> flash}}
            <h3>Users</h3>
            <h5 class="mt-3">Employees</h5>
            <div class="w-100 overflow-auto p-3 shadow-lg rounded-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">User Type</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    {{#each employees}}
                    <tbody>
                        <tr>
                            <td scope="row">{{this.first_name}}</td>
                            <td scope="row">{{this.last_name}}</td>
                            <td scope="row">{{this.email}}</td>
                            <td scope="row">{{this.userType.user_type}}</td>
                            <td scope="row">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-dark btn-outline-light" href="/users/{{this.user_id}}/update"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-dark btn-outline-light" href="/users/{{this.user_id}}/delete"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
            <h5 class="mt-3">Customers</h5>
            <div class="w-100 overflow-auto p-3 shadow-lg rounded-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">User Type</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    {{#each customers}}
                    <tbody>
                        <tr>
                            <td scope="row">{{this.first_name}}</td>
                            <td scope="row">{{this.last_name}}</td>
                            <td scope="row">{{this.email}}</td>
                            <td scope="row">{{this.userType.user_type}}</td>
                            <td scope="row">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-dark btn-outline-light" href="/users/{{this.user_id}}/update"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-dark btn-outline-light" href="/users/{{this.user_id}}/delete"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
</div>
{{/block}}

{{/extends}}