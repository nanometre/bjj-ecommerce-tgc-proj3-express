{{#extends 'base'}}

{{#block 'content'}}
<div class="container-fluid">
    <div class="container content-container">
        <div class="h-100 p-3 d-flex flex-column justify-content-center">
            {{> flash}}
            <h3>Deleting Variant for "{{variant.product.product_name}}"</h3>
            <div class="alert alert-danger">
                <p>Are you sure you want to delete the following variant?</p>
                <div class="alert alert-secondary">
                    <p>Color: {{variant.color.color_name}}</p>
                    <p>Size: {{variant.size.size_name}}</p>
                    <p>Stock: {{variant.stock}}</p>
                    <p>Tags:
                        {{#each variant.tags}}
                        <span class="badge bg-secondary">{{this.tag_name}}</span>
                        {{/each}}
                    </p>
                </div>
                <p>This action is irreversible.</p>
                <form method="POST">
                    {{> csrfToken}}
                    <div class="custom-btn-group">
                        <a href="/products/{{variant.product_id}}/variants"
                            class="btn btn-sm btn-dark btn-outline-light">Cancel</a>
                        <input type="submit" value="Delete Product" class="btn btn-sm btn-dark btn-outline-light">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{/block}}

{{/extends}}