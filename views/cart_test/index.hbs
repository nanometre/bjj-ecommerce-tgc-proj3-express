{{#extends 'base'}}

{{#block 'content'}}
<h1>My Shopping Cart</h1>
<ul class="list-group">
    {{#each cartItems}}
    <li class="list-group-item">
        <h4>{{this.variant.product.product_name}}</h4>
        <h5>Cost: {{centsToDollars this.variant.product.cost}}</h5>
        <form method="POST" action="/cart/{{this.variant.variant_id}}/quantity/update">
            <input type="hidden" value="{{../csrfToken}}" name="_csrf">
            <h5>Quantity: <input type="text" name="newQuantity" value="{{this.quantity}}" style="width: 30px"></h5>
            <input type="submit" value="Update Quantity" class="btn btn-success btn-sm">
        </form>
        <div>
            <a href='/cart/{{this.variant.variant_id}}/delete' class='btn btn-danger btn-sm'>Remove</a>
        </div>
    </li>
    {{/each}}
</ul>
<a class="btn btn-success" href="/checkout">Checkout</a>  
{{/block}}

{{/extends}}